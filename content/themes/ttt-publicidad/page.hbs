{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}
<div class="left-nav">
  {{>navigationalt}}
</div>

<aside class="menu-left">
  <span tabindex="0" class="menu-icon-left"></span>
  <span class="icon-logo">TTT</span>
  <span class="icon-name">TTT Publicidad</span>
</aside>

<aside class="menu-right">
  <a class="back-icon nav-close" href="{{@blog.url}}">Go back!</a>
  <ul class="social-links">
    <li><a href="mailto:federico@tttpublicidad.com" class="mail">email</a></li>
    <li><a href="http://facebook.com/tttigrespublicidad" class="facebook">facebook</a></li>
    <li><a href="https://instagram.com/ttt.publicidad" class="instagram">instagram</a></li>
  </ul>
</aside>

<main class="content" role="main">
  <article class="{{post_class}}">

    {{#get "posts" order="published_at asc" include="tags" as |about|}}
      {{#foreach about}}
        {{#has tag="who"}}
          <article class="{{post_class}}" id="sobre-nosotros">
            <section class="post-content">
              <h5 class="post-title">{{title}}</h5>
              <p>{{content}}</p>
            </section>

            <figure class="box">
              <div class="image" style="background-image: url('{{image}}');">
                <img src="{{image}}" alt="{{title}}" width="0" height="0">
              </div>
            </figure>
          </article>
        {{/has}}

        {{#has tag="what"}}
          <article class="{{post_class}}" id="{{slug}}">
            <section class="post-content">
              <h5 class="post-title">{{title}}</h5>
              <p>{{content}}</p>
              {{#if image}}<figure class="post-image" style="background-image: url('{{image}}')"></figure>{{/if}}
            </section>
          </article>
        {{/has}}

        {{#has tag="product"}}
          <article class="{{post_class}}" id="{{slug}}">
            <section class="post-content">
              {{content}}
            </section>
          </article>
        {{/has}}

        {{#has tag="example"}}
          <article class="{{post_class}}" id="{{slug}}">
            <section class="post-content">
              <div>
                {{content}}
              </div>
            </section>
            <figure class="post-image" style="background-image: url('{{image}}');"></figure>
          </article>
        {{/has}}
      {{/foreach}}
    {{/get}}
  </article>

  <section class="clients" id="clientes">
    <article class="work-sample work-title">
      <h5>Clients</h5>
    </article>
    {{#get "posts" order="published_at asc" include="tags" as |client|}}
      {{#foreach client}}
        {{#has tag="client"}}
          <article class="work-sample" style="background-image: url('{{image}}');">
            <div>
              <h3 class="title">{{title}}</h3>
              <p class="description">{{content}}</p>
            </div>
          </article>
        {{/has}}
      {{/foreach}}
    {{/get}}
  </section>
</main>
{{/post}}
