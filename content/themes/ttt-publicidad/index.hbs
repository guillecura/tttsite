{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The blog navigation links --}}
{{navigation}}

<span tabindex="0" class="menu-icon"></span>

<div class="site-wrapper">
  {{#if @blog.cover}}
    <header class="hero-section">
      <span class="blog-cover" style="background-image: url('{{@blog.cover}}')"></span>
      {{#if @blog.title}}
        <div class="blog-title">
          <div>
            <h1>{{@blog.title}}</h1>
            {{#if @blog.description}}
              <h2>{{@blog.description}}</h2>
            {{/if}}
          </div>
        </div>
      {{/if}}
    </header>
  {{/if}}

  {{!-- The main content area on the homepage --}}
  <main id="content" name="content" class="content" role="main">
    <div class="white-box">
      {{#if @blog.logo}}
        <span class="ttt-logo" style="background-image: url('{{@blog.logo}}');">{{@blog.title}}</span>
      {{/if}}

      <p>MONTEVIDEO, Uruguay</p>

      <ul>
        <li><a class="facebook-link" href="https://facebook.com/tttigrespublicidad">/tttigrespublicidad</a></li>
        <li><span class="phone-link">Tel: (+598) 92 656 588 / 95 30 64 11</span></li>
      </ul>
    </div>
  </main>
</div>
